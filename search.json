---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"      : {{ post.title | jsonify }},
      "url"        : {{ post.url | relative_url | jsonify }},
      "category"   : {{ post.category | jsonify }},
      "tags"       : {{ post.tags | join: ', ' | jsonify }},
      "date"       : {{ post.date | date_to_string | jsonify }},
      "excerpt"    : {{ post.excerpt | strip_html | strip_newlines | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% for work in site.works %}
    ,{
      "title"      : {{ work.title | jsonify }},
      "url"        : {{ work.url | relative_url | jsonify }},
      "category"   : {{ work.filter | jsonify }},
      "tags"       : {{ "" | jsonify }},
      "date"       : {{ "" | jsonify }},
      "excerpt"    : {{ work.description | default: work.content | strip_html | strip_newlines | jsonify }}
    }
  {% endfor %}
]
